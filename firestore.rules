rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // A user can only read and write their own document in the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // A user has full control over tasks within their own document.
      match /tasks/{taskId} {
        allow create, read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}